{
  "name": "ai-dev-bot",
  "version": "1.0.0",
  "description": "Gemini-CLI based GitHub AI coding bot with issue-based memory",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:integration": "npm test -- --testPathPattern=integration",
    "test:unit": "npm test -- --testPathPattern='(context-analyzer|issue-manager|gemini-service|modules|config).test.js'",
    "validate:workflows": "node scripts/validate-workflows.js",
    "validate:patterns": "node scripts/validate-workflows.js && npm run check:antipatterns",
    "check:antipatterns": "! grep -r --exclude='test-validation.yml' 'grep.*analysis_file' .github/workflows/ || (echo 'ERROR: Found stdout parsing anti-pattern' && exit 1)",
    "precommit": "npm run validate:workflows && npm run test:unit",
    "prepush": "npm test && npm run validate:workflows"
  },
  "keywords": [
    "ai",
    "automation",
    "github",
    "gemini"
  ],
  "author": "AI-Dev-Bot",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^20.0.2",
    "js-yaml": "^4.1.0",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "scripts/gemini-service.js",
      "scripts/issue-manager.js",
      "scripts/context-analyzer.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 25,
        "lines": 22,
        "statements": 22
      }
    }
  }
}
